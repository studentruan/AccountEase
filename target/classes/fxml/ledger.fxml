<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../css/style.css"
            fx:controller="com.myapp.controller.LedgerController">


    <!-- 顶部栏 -->
    <top>
        <HBox spacing="5" styleClass="top-bar" alignment="CENTER" HBox.hgrow="ALWAYS">
            <children>



                <Button fx:id="BackButton" style="-fx-background-color: transparent; -fx-cursor: hand;" onAction="#back_to_main">-->
                    <graphic>
                        <ImageView fx:id="image_Back_to_main" fitWidth="30" fitHeight="30"/>
                    </graphic>
                </Button>
                <Label fx:id="image_Back_to_main_text" styleClass="back-link" text="Back to main page" onMouseClicked="#back_to_main"/>

                <Region HBox.hgrow="ALWAYS" />
                <Label styleClass="title" text="%ledger.title" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="ledgerTypeLabel" styleClass="ledger-type" text="%ledger.type.default" />
            </children>
        </HBox>
    </top>

    <!-- 中部内容区域 -->
    <center>
        <AnchorPane style="-fx-background-color: #F5F5F5">
            <HBox spacing="27" AnchorPane.topAnchor="25" AnchorPane.leftAnchor="35"
                  AnchorPane.rightAnchor="35" AnchorPane.bottomAnchor="25">
                <children>
                    <!-- 左侧区域：财务卡片和图表 -->
                    <VBox spacing="20">
                        <!-- 财务信息卡片 -->
                        <HBox spacing="25">
                            <children>
                                <!-- 支出卡片 -->
                                <VBox spacing="5" styleClass="financial-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ImageView fitWidth="25" fitHeight="25">
                                                <image>
                                                    <Image url="@/images/expense.png" />
                                                </image>
                                            </ImageView>
                                            <Label fx:id="expenseLabel" text="%ledger.expense" styleClass="text-financial-card"/>
                                        </HBox>
                                        <Label fx:id="incomeLabel" text="%ledger.income" styleClass="text-financial-card"/>
                                        <Label fx:id="balanceLabel" text="%ledger.balance" styleClass="text-financial-card"/>
                                    </children>
                                </VBox>

                                <!-- 预算卡片 -->
                                <VBox spacing="5" styleClass="financial-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ImageView fitWidth="25" fitHeight="25">
                                                <image>
                                                    <Image url="@/images/budget.png" />
                                                </image>
                                            </ImageView>
                                            <Label fx:id="budgetLabel" text="%ledger.budget" styleClass="text-financial-card"/>
                                        </HBox>
                                        <Label fx:id="remainLabel" text="%ledger.remain" styleClass="text-financial-card"/>
                                        <Label fx:id="spentLabel" text="%ledger.spent" styleClass="text-financial-card"/>
                                    </children>
                                </VBox>

                                <!-- 待处理卡片 -->
                                <VBox spacing="5" styleClass="financial-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ImageView fitWidth="25" fitHeight="25">
                                                <image>
                                                    <Image url="@/images/pending.png" />
                                                </image>
                                            </ImageView>
                                            <Label fx:id="pendingLabel" text="%ledger.pending" styleClass="text-financial-card"/>
                                        </HBox>
                                        <Label fx:id="claimedLabel" text="%ledger.claimed" styleClass="text-financial-card"/>
                                        <Label fx:id="reimburLabel" text="%ledger.reimbur" styleClass="text-financial-card"/>
                                    </children>
                                </VBox>

                                <!-- 资产卡片 -->
                                <VBox spacing="5" styleClass="financial-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ImageView fitWidth="25" fitHeight="25">
                                                <image>
                                                    <Image url="@/images/assets.png" />
                                                </image>
                                            </ImageView>
                                            <Label fx:id="netAssetsLabel" text="%ledger.net" styleClass="text-financial-card"/>
                                        </HBox>
                                        <Label fx:id="totalsLabel" text="%ledger.total" styleClass="text-financial-card"/>
                                        <Label fx:id="debtsLabel" text="%ledger.debts" styleClass="text-financial-card"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- 图表区域 -->
                        <HBox spacing="25">
                            <children>
                                <!-- 统计图和AI建议 -->
                                <VBox spacing="20">
                                    <children>
                                        <VBox prefWidth="425" prefHeight="275" styleClass="chart-box">
                                            <children>
                                                <Label styleClass="chart-title" text="%ledger.expense.stats" />
                                                <LineChart fx:id="lineChart">
                                                    <xAxis>
                                                        <CategoryAxis fx:id="xAxis" label="%ledger.time" />
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis fx:id="yAxis" label="%ledger.value" />
                                                    </yAxis>
                                                </LineChart>
                                            </children>
                                        </VBox>

                                        <VBox fx:id="adviceBox" prefWidth="425" prefHeight="245" styleClass="advice-box">
                                            <children>
                                                <Label styleClass="advice-title" text="%ledger.advice.title" />
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- 支出分类饼图 -->
                                <VBox prefWidth="425" prefHeight="470" styleClass="chart-box">
                                    <children>
                                        <Label styleClass="chart-title" text="%ledger.expense.categories" />
                                        <PieChart fx:id="expenseCategoriesChart" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </VBox>

                    <!-- 右侧区域：搜索和日历 -->
                    <VBox spacing="20">
                        <children>
                            <!-- 搜索框 -->
                            <VBox alignment="CENTER" prefWidth="400" prefHeight="15" styleClass="search-box">
                                <children>
                                    <HBox spacing="10" alignment="CENTER_LEFT">
                                        <ImageView fitWidth="20" fitHeight="20">
                                            <image>
                                                <Image url="@/images/search.png" />
                                            </image>
                                        </ImageView>
                                        <Label fx:id="searchLabel" text="%ledger.search" styleClass="text-search-card"/>
                                    </HBox>
                                </children>
                            </VBox>

                            <!-- 日历 -->
                            <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="350" styleClass="calendar-widget">
                                <children>
                                    <HBox spacing="20" alignment="CENTER" styleClass="calendar-header">
                                        <children>
                                            <Button fx:id="prevMonthButton" text="←" styleClass="calendar-button"
                                                    onAction="#handlePrevMonth" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Label fx:id="monthTitle" styleClass="calendar-title" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Button fx:id="nextMonthButton" text="→" styleClass="calendar-button"
                                                    onAction="#handleNextMonth" />
                                        </children>
                                    </HBox>

                                    <!-- 星期标题 -->
                                    <HBox spacing="4" alignment="CENTER" styleClass="calendar-week-header">
                                        <children>
                                            <Label fx:id="sunLabel" styleClass="week-day" text="%ledger.week.sun" />
                                            <Label fx:id="monLabel" styleClass="week-day" text="%ledger.week.mon" />
                                            <Label fx:id="tueLabel" styleClass="week-day" text="%ledger.week.tue" />
                                            <Label fx:id="wedLabel" styleClass="week-day" text="%ledger.week.wed" />
                                            <Label fx:id="thuLabel" styleClass="week-day" text="%ledger.week.thu" />
                                            <Label fx:id="friLabel" styleClass="week-day" text="%ledger.week.fri" />
                                            <Label fx:id="satLabel" styleClass="week-day" text="%ledger.week.sat" />
                                        </children>
                                    </HBox>

                                    <HBox spacing="4" alignment="CENTER" styleClass="calendar-week-header">
                                        <children>
                                            <ImageView fitWidth="40" fitHeight="225">
                                                <image>
                                                    <Image url="@/images/belowlian.jpg" />
                                                </image>
                                            </ImageView>
                                            <GridPane fx:id="calendarGrid" styleClass="calendar-grid" />
                                            <ImageView fitWidth="40" fitHeight="225">
                                                <image>
                                                    <Image url="@/images/uplian.jpg" />
                                                </image>
                                            </ImageView>
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>

                            <!-- 日期详情 -->
                            <VBox fx:id="dateDetailsContainer" spacing="10" alignment="CENTER"
                                  styleClass="date-details-container">
                                <children>
                                    <Label fx:id="selectedDateLabel" styleClass="date-details-title"
                                           text="%ledger.date.details" />
                                    <VBox fx:id="expenseItemsContainer" spacing="5" alignment="CENTER"
                                          styleClass="expense-items-container" />
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </AnchorPane>
    </center>


</BorderPane>
