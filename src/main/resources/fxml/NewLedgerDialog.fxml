<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.controller.NewLedgerDialogController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="新建账本" styleClass="dialog-title" />

    <GridPane hgap="10" vgap="10">
        <Label text="账本名称:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="账本描述:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="账本封面:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Button text="选择图片" onAction="#handleChooseImage" />
            <Label fx:id="imagePathLabel" text="未选择图片" />
        </HBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="取消" onAction="#handleCancel" />
        <Button text="创建" onAction="#handleConfirm" />
    </HBox>
</VBox>