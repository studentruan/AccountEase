<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.myapp.controller.ExportSettingsController"
      spacing="15"
      style="-fx-padding: 20;">

    <Label text="%export.settings.title" styleClass="settings-title"/>

    <VBox spacing="10">
        <!-- 导出路径输入行 -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="%export.path.label" styleClass="export-label"/>
            <TextField fx:id="exportPathField"
                       styleClass="file-path-export"
                       promptText="%export.path.prompt"
                       editable="false"/>
            <Button text="%button.browse"
                    styleClass="browse-btn"
                    onAction="#handleBrowseExportPath"/>
        </HBox>

        <!-- 文件类型选择 -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="%export.format.label" styleClass="export-label"/>
            <ComboBox fx:id="exportFormatComboBox"
                      styleClass="file-type-combo"/>
        </HBox>

        <!-- 导出按钮 -->
        <Button text="%button.export"
                styleClass="save-btn"
                onAction="#handleExportData"/>
    </VBox>

</VBox>

